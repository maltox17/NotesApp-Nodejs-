{{#if success_msg}}

<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong> {{success_msg}} </strong>
  <span type="button" id="cerrar" "btn btn-outline-success text-end" data-bs-dismiss="alert" style="font-size:medium; float: inline-end;margin-top: -0.1rem;" >&times;</span>
</div>

{{/if}}

{{#if error_msg}}

<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong> {{error_msg}} </strong>
  <span type="button" id="cerrar" "btn btn-outline-success text-end" data-bs-dismiss="alert" style="font-size:medium; float: inline-end;margin-top: -0.1rem;" >&times;</span>
</div>

{{/if}}


